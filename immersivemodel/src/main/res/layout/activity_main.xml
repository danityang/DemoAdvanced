<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_margin"
    android:orientation="vertical"
    tools:context="com.demo.immersivemodel.MainActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:onClick="fullScreenOnClick"
        android:text="FULLSCREEN" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:onClick="transParentStatusBarClick"
        android:text="TRANSPARENT_STATUS_BAR" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height"
        android:onClick="windowFocusClick"
        android:text="WINDOW_FOCUS" />


</LinearLayout>
